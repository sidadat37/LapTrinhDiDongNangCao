<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar_mainHome"
        android:background="#2196F3"
        app:title="Giỏ Hàng"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"></android.support.v7.widget.Toolbar>
    <ImageView
        android:id="@+id/img_gioHang_img"
        android:layout_margin="10dp"
        android:src="@drawable/ip3"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/txt_tenthanhToan"
        android:textSize="30dp"
        android:text="Tên Sản Phẩm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/txt_TOngTien"
        android:textColor="#F44336"
        android:textSize="30dp"
        android:text="Tổng Tiền : "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edit_TKHH"
        android:hint="Nhập Tên"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edit_SDTT"
        android:hint="Nhập SDT"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/edit_DiaChi"
        android:hint="Nhập Địa Chỉ Nhận Hàng"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:text="Chọn hình thức thanh toán"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_MuaHang"
        android:text="Mua Hàng"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
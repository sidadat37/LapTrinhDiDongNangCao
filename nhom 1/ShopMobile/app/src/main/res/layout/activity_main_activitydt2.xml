<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar_mainHome"
        android:background="#2196F3"
        app:title="Trang chủ"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"></android.support.v7.widget.Toolbar>


    <ImageView
        android:layout_margin="10dp"
        android:scaleType="fitXY"
        android:id="@+id/imageViewSP"
        android:layout_width="match_parent"
        android:layout_height="300dp"
         />

   <LinearLayout
       android:weightSum="5"
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:layout_weight="4"
           android:textSize="30dp"
           android:id="@+id/textViewTSP"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="IP 14 pro max"
           android:textStyle="bold"/>
       <ImageView
           android:id="@+id/img_GIoHang"
           android:src="@drawable/ic_baseline_shopping_cart_24"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </LinearLayout>
    <TextView
        android:textSize="30dp"
        android:id="@+id/textViewGSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giá 2.000.000"
        android:textColor="#D30404"/>
    <TextView
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mô Tả Sản Phẩm" />
    <TextView
        android:textSize="15dp"
        android:id="@+id/textViewMTSP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mô tả : " />
</LinearLayout>